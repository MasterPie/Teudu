<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <add key="EventsServiceURI" value="http://teudu.herokuapp.com/events.xml"/>
    <add key="EventsServicePollInterval" value="3600"/> <!-- In seconds, minimum is 3600 (1 minute)-->
    <add key="CachedImageDirectory" value="image_stash"/>
    <add key="UserDistanceRequired" value="1.3"/>
    <add key="MaxUserDistance" value="3.0"/> <!--Default is 3.0 (meters)-->
    <add key="MaxEventWidth" value="230"/>
    <add key="MaxEventHeight" value="400"/>
    <add key="TileSlidesEnabled" value="true"/>
    <add key="Inverted" value="false"/>
    <add key="CorrespondenceScaleX" value="4"/>
    <add key="CorrespondenceScaleY" value="7"/>
  </appSettings>
  <system.diagnostics>
    <trace>
      <listeners>
        <add name="BindableListener"
        type="Teudu.InfoDisplay.BindableTraceListener,Teudu.InfoDisplay" />
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>